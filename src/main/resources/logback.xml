<configuration>

  <appender name="STDERR" class="ch.qos.logback.core.FileAppender">
    <file>error.log</file>
    <append>true</append>
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>WARN</level>
    </filter>
    <encoder>
      <pattern>%date [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="MAIN" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>main.log</file>
    <!-- <immediateFlush>false</immediateFlush> -->
    <append>true</append>
    <encoder>
      <pattern>%date [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>INFO</level>
    </filter>
    <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
      <evaluator>
        <expression>marker == null</expression>
      </evaluator>
      <OnMismatch>DENY</OnMismatch>
      <OnMatch>NEUTRAL</OnMatch>
    </filter>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>main.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>7</maxHistory>
      <totalSizeCap>300MB</totalSizeCap>
    </rollingPolicy>
  </appender>

  <appender name="DEBUG" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>debug.log</file>
    <!-- <immediateFlush>false</immediateFlush> -->
    <append>true</append>
    <encoder>
      <pattern>%date [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
    <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
      <evaluator>
        <expression>marker == null</expression>
      </evaluator>
      <OnMismatch>DENY</OnMismatch>
      <OnMatch>NEUTRAL</OnMatch>
    </filter>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>debug.%d{yyyy-MM-dd}.log</fileNamePattern>
      <maxHistory>3</maxHistory>
      <totalSizeCap>1GB</totalSizeCap>
    </rollingPolicy>
  </appender>

  <appender name="StatisticsCSV" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>statistics.csv</file>
    <append>true</append>
    <encoder>
      <pattern>%date;%msg%n</pattern>
    </encoder>
    <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
      <evaluator>
        <expression>marker != null &amp;&amp; marker.contains("CSV")</expression>
      </evaluator>
      <OnMismatch>DENY</OnMismatch>
      <OnMatch>NEUTRAL</OnMatch>
    </filter>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>statistics.%d{yyyy-MM-dd}.csv</fileNamePattern>
      <maxHistory>30</maxHistory>
      <totalSizeCap>1GB</totalSizeCap>
    </rollingPolicy>
  </appender>

  <appender name="TabEventsCSV" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>tab_events.csv</file>
    <append>true</append>
    <encoder>
      <pattern>%date;%msg%n</pattern>
    </encoder>
    <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
      <evaluator>
        <expression>marker != null &amp;&amp; marker.contains("CSV")</expression>
      </evaluator>
      <OnMismatch>DENY</OnMismatch>
      <OnMatch>NEUTRAL</OnMatch>
    </filter>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>tab_events.%d{yyyy-MM-dd}.csv</fileNamePattern>
      <maxHistory>30</maxHistory>
      <totalSizeCap>1GB</totalSizeCap>
    </rollingPolicy>
  </appender>

  <appender name="TabSwitchesCSV" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>tab_switches.csv</file>
    <append>true</append>
    <encoder>
      <pattern>%date;%msg%n</pattern>
    </encoder>
    <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
      <evaluator>
        <expression>marker != null &amp;&amp; marker.contains("CSV")</expression>
      </evaluator>
      <OnMismatch>DENY</OnMismatch>
      <OnMatch>NEUTRAL</OnMatch>
    </filter>
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>tab_switches.%d{yyyy-MM-dd}.csv</fileNamePattern>
      <maxHistory>30</maxHistory>
      <totalSizeCap>1GB</totalSizeCap>
    </rollingPolicy>
  </appender>

  <appender name="AsyncMain" class="ch.qos.logback.classic.AsyncAppender">
    <queueSize>8192</queueSize>
    <neverBlock>true</neverBlock>
    <appender-ref ref="MAIN" />
  </appender>

  <appender name="AsyncDebug" class="ch.qos.logback.classic.AsyncAppender">
    <queueSize>8192</queueSize>
    <neverBlock>true</neverBlock>
    <appender-ref ref="DEBUG" />
  </appender>

  <root level="debug">
    <appender-ref ref="AsyncMain" />
    <appender-ref ref="AsyncDebug" />
    <appender-ref ref="STDERR" />
  </root>

  <logger name="heuristics.HeuristicsActor" level="info" />

  <logger name="messaging.NativeMessaging" level="info" />

  <logger name="persistence.Persistence" level="info" />

  <logger name="statistics.StatisticsActor" level="info">
    <appender-ref ref="StatisticsCSV" />
  </logger>

  <logger name="tabstate.CurrentTabsActor" level="info" />
  <logger name="tabstate.TabStateActor" level="info">
    <appender-ref ref="TabEventsCSV" />
  </logger>

  <logger name="tabswitches.SwitchGraphActor" level="info" />
  <logger name="tabswitches.SwitchMapActor" level="debug">
    <appender-ref ref="TabSwitchesCSV" />
  </logger>
  <logger name="tabswitches.Watset" level="info" />

</configuration>
